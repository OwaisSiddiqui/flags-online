{
  "scripts": {
    "dev:server": "cross-env NODE_ENV=dev nodemon api/index.ts --ignore 'web/*'",
    "dev:web": "cd web && npm run dev",
    "build:web": "cd web && npm run build",
    "build:server": "tsc",
    "start:server": "node build/api/index.js",
    "start:web": "cd web && npm run start",
    "dev:db:seed": "cross-env NODE_ENV=dev npx mikro-orm seeder:run",
    "prod:db:seed": "cross-env NODE_ENV=prod npx mikro-orm seeder:run",
    "dev:db:init": "cross-env NODE_ENV=dev npx mikro-orm migration:create && NODE_ENV=dev npx mikro-orm migration:up",
    "prod:db:init": "cross-env NODE_ENV=prod npx mikro-orm migration:create && NODE_ENV=prod npx mikro-orm migration:up",
    "build:vercel": "cd web && npm run build"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.6.0",
    "@mikro-orm/core": "^5.6.0",
    "@mikro-orm/migrations": "^5.6.0",
    "@mikro-orm/postgresql": "^5.6.0",
    "@mikro-orm/seeder": "^5.6.0",
    "@trpc/server": "^10.5.0",
    "bcrypt": "^5.1.0",
    "cookie": "^0.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0",
    "pusher": "^5.1.2",
    "uuid": "^9.0.0",
    "ws": "^8.11.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.5.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/pg": "^8.6.5",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts"
    ]
  }
}
